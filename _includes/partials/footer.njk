<footer class="container bg-orange rounded-top">
<div class="row justify-content-center">
{% for n in metadata.footer.nav %}
<div class="col-md-3 col-4 p-3 p-md-5">
<h3>{{n.title}}</h3>
<ul>{% for i in n.item %}
<li class="p-1"><a href="{{i.url}}" class="text-white">{{i.nav}}</a></li>
{% endfor %}</ul>
</div>
{% endfor %}
<div class="col-md-12 p-3 text-center text-small">
<img class="img-fluid" src="{{metadata.footer.creativecommons.image}}" alt="{{metadata.title}}" width="88 px" height="31 px" />
<p class="mt-3">{{metadata.footer.creativecommons.text}}<br/>
{{metadata.footer.copyrights.text1}} <a href="{{metadata.footer.copyrights.text2_url}}" class="text-white">{{metadata.footer.copyrights.text2}}</a>
{{metadata.footer.copyrights.text3}} <a href="{{metadata.footer.copyrights.text4_url}}" class="text-white">{{metadata.footer.copyrights.text4}}</a>
</p>
</div>
</div>
</footer>
