---
layout: base.njk
---
{%- css %}{% include "node_modules/prismjs/themes/prism-okaidia.css" %}{% endcss %}
{%- css %}{% include "public/css/prism-diff.css" %}{%- endcss %}
{%- js %}{% include "node_modules/@zachleat/heading-anchors/heading-anchors.js" %}{% endjs %}
<main class="print">
{% include "partials/header.njk" %}
<div class="container ">
<div class="row mts-5">

<div class="col-md-3 p-3">
{% set collectionName = collectionName or page.filePathStem.split('/')[1] %}
{% include "partials/sidebar-collections.njk" %}
{% include "partials/author.njk" %}
</div>

<div class="col-md-9 p-3">
<div class="card mb-3" id="{{home.url}}">
<h3 class="card-header text-maron"><strong><a href="{{page.url}}" class="no-deco text-maron">{{title}}</a></strong></h3>
<div class="card-body">
{% if excerpt %}
<article class="mb-3">{% for j in excerpt %}<p>{{j.text}}</p>{% endfor %}</article>
{% endif %}
<article class="poem">{{ content | safe }}</article>
{% if canonical_url %}
<p class="mt-3"><a href="{{ canonical_url }}" target="_blank" rel="noopener noreferrer">Read the full article</a></p>
{% endif %}
</div>
<div class="card-footer">
{%- set currentCollection = page.filePathStem.split('/')[1] %}
{%- if collections[currentCollection] %}
{%- set previousPost = collections[currentCollection] | getPreviousCollectionItem %}
{%- set nextPost = collections[currentCollection] | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<div class="row">
<div class="col-6">{%- if previousPost %}← Previous<br> <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>{% endif %}</div>
<div class="col-6 text-end">{%- if nextPost %}Next →<br><a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>{% endif %}</div>
</div>
{%- endif %}
{%- endif %}
</div>
</div>


</div>
</div>
{% include "partials/footer_note.njk" %}
</main>
{% include "partials/article_print.njk" %}
