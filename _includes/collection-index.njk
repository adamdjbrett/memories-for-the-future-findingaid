---
layout: base.njk
---
<main class="print">
{% include "partials/header.njk" %}
<div class="container ">
<div class="row mts-5">

<div class="col-md-3 p-3">
{% include "partials/collections.njk" %}
{% include "partials/rss.njk" %}
</div>

<div class="col-md-9 p-3">
{% set collectionName = collectionName or page.filePathStem.split('/').filter(Boolean).pop() %}
{% set collectionMeta = collectionsData[collectionName] or {} %}
{% set collectionTag = collectionMeta.collectionTag or collectionName %}
{% if collections[collectionTag] %}
{% for item in collections[collectionTag] | reverse %}
{% if item.url != page.url %}
<div class="card mb-3" id="{{item.url}}">
<h3 class="card-header text-maron"><strong><a href="{{item.url}}" class="no-deco text-maron">{{item.data.title}}</a></strong></h3>
<div class="card-body">
<article>{% for j in item.data.excerpt %}<p>{{j.text}}</p>{% endfor %}</article>
<p><a href="{{item.url}}">Read More</a></p>
</div>
</div>
{% endif %}
{% endfor %}
{% endif %}
</div>

</div>
</div>
{% include "partials/footer_note.njk" %}
</main>
{% include "partials/article_print.njk" %}
