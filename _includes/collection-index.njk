---
layout: base.njk
---
<main class="print">
{% include "partials/header.njk" %}
<div class="container">
<div class="row mts-5">

<div class="col-md-3 p-3">
{% include "partials/collections.njk" %}
{% include "partials/rss.njk" %}
</div>

<div class="col-md-9 p-3">
    {# 1. Tampilkan isi konten utama (Testing.md atau detail research) #}
    <div class="main-content-entry mb-5">
        {{ content | safe }}
    </div>
    
    <hr/>

    {# 2. Ambil nama koleksi yang sedang aktif (misal: "testing") #}
    {% set currentTag = tags[0] or collectionTag or collectionName %}

    {# 3. Loop semua data dan filter yang punya collection sama #}
    <div class="list-container">
        {% for s in collections.all | reverse %}
            {# Filter: Hanya ambil yang punya data entry dan collection-nya cocok #}
            {% if s.data.entry.collection == currentTag %}
                {# Jangan tampilkan halaman yang sedang dibuka sekarang #}
                {% if s.url != page.url %}
                    <div class="card mb-3">
                        <h3 class="card-header text-maron">
                            <strong><a href="{{ s.url }}" class="no-deco text-maron">{{ s.data.entry.Title }}</a></strong>
                        </h3>
                        <div class="card-body">
                            <article>
                                <p>{{ s.data.entry.Description | truncate(200) }}</p>
                            </article>
                            <p><a href="{{ s.url }}">Read More</a></p>
                        </div>
                    </div>
                {% endif %}
            {% endif %}
        {% endfor %}
    </div>
</div>

</div>
</div>
{% include "partials/footer_note.njk" %}
</main>
{% include "partials/article_print.njk" %}